<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@color/white">

    <ImageView
            android:id="@+id/item_mainlv_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/it_1"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_mainlv_iv"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
    <TextView
            android:id="@+id/item_mainlv_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textStyle="bold"
            android:textSize="16sp"/>
    <TextView
            android:id="@+id/item_mainlv_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beizhu"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:orientation="vertical">
        <TextView
                android:id="@+id/item_mainlv_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-17"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
        <TextView
                android:id="@+id/item_mainlv_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:03"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>