<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_chartfrag_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/ic_canyin_fs"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/item_chartfrag_tv_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三餐"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/item_chartfrag_iv"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/item_chartfrag_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/item_chartfrag_tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="15sp"/>
    </LinearLayout>

</RelativeLayout>